R2_BUCKET_NAME=
R2_ENDPOINT=
R2_REGION=

# =====================================
# Trading Bot Configuration
# =====================================
ENVIRONMENT=development
LOG_LEVEL=INFO
TRADING_MODE=paper
MAX_POSITION_SIZE=100.00
RISK_PERCENTAGE=1.0

# =====================================
# Data Pipeline Settings
# =====================================
DATA_DIRECTORY=local/data
CACHE_TTL_SECONDS=300
BATCH_SIZE=1000
POLLING_INTERVAL_SECONDS=60